{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "outDir": "build/app",
    "esModuleInterop": false,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*.ts", "src/**/*.json"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
